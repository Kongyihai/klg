*
  margin 0
  padding 0
.container
  width 100%
  margin 0 auto
  min-height 575px
  max-height 575px
  overflow-y auto

.header
  height 40px
  .icon
    float left
    margin 12px
  h1
    font-size 15px
    font-weight 100
    height 40px
    line-height 40px
.listItem
  border-top 1px solid rgb(238,238,238)
  height 105px
  padding-top 15px
  padding-bottom 12px
  .icon
    float left
    margin 0 12px
    margin-top 40px
  img
    float left
  .des
    float left
    width 200px
    height 105px
    padding-left 20px
    p
      font-size: 14px
      line-height 20px
    .num
      margin-top 36px
      height 22px
      input
        float left
        width 22px
        height 22px
        border none
        outline none
        &.push
          background-image url("../img/jia.jpg")
        &.reduce
          background-image url("../img/jian.jpg")
      .number
        float left
        font-size 14px
        line-height 22px
        margin 0 5px
      .price
        float right
        margin-right 20px
        font-size 10px
        color red
        span
          font-size 16px
hr
  height 5px
  border none
  background-color rgb(238,238,238)
footer
  position fixed
  left 0px
  bottom 48px
  width 100%
  height 44px
  border-top 1px solid rgb(238,238,238)
  .icon
    float left
    width 232px
    margin 12px
    font-size 14px
    img
      float left
    .all
      float left
      margin-left 12px
    .total
      float right
      span
        color red
      .allPrice
        font-size 16px
        font-weight bold
  .jiesuan
    position absolute
    right 0px
    width 120px
    height 45px
    line-height 45px
    text-align center
    color white
    background-color red
    p
      text-align center


















	